<div class="question-container post-container">
  <%= erb :'votes/_vote', :locals => { :voteable => @question } %>
  <div class='postbar'>
    <h3 class='question-title'><%= html_escaper(@question.title) %></h3>
    <p class='question-body' ><%= html_escaper(@question.body) %></p>
    <p class='question-footer'>by <%= html_escaper(@question.author.username) %> [<%= @question.time_since_creation %>]</p>
    <% if session_current_user %>
      <a id='show-answer-form' href="/questions/<%= @question.id %>/answers/new">Answer this question</a><br>
      <a id='show-comment-form' href="/questions/<%= @question.id %>/comments/new">Comment on this question</a>
      <% end %>
  </div>
</div>
